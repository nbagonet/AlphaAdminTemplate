//- Pages - Calendar

//- include ../common/variables
include ./mixins


div.col-lg-12

  //Calendar
  div.panel.panel-white
    div.panel-body
      div.row

        div.col-md-3
          div#external-events
            div
              h4 Add New Event
              div
                input#event-name.form-control(type="text" placeholder="Enter Event Name" maxlength="12")
              div.mtop10
                +buttons("btn-success","Add Event","fa fa-plus mright5")(id="event-add")
            hr.hr-grey
            div
              h4 Draggable Events
              div#event-box.ptop10
                .fc-event-btn.btn.btn-xs.btn-primary.mright5.mbottom5
                  i.fa.fa-angellist.mright5
                  |My Event 1
                .fc-event-btn.btn.btn-xs.btn-success.mright5.mbottom5
                  i.fa.fa-area-chart.mright5
