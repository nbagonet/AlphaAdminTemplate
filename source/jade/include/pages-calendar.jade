                .fc-event-btn.btn.btn-xs.btn-info.mright5.mbottom5
                  i.fa.fa-at.mright5
                  |My Event 3
                .fc-event-btn.btn.btn-xs.btn-warning.mright5.mbottom5
                  i.fa.fa-bell-slash.mright5
                  |My Event 4
                .fc-event-btn.btn.btn-xs.btn-danger.mright5.mbottom5
                  i.fa.fa-bicycle.mright5
                  |My Event 5
                .fc-event-btn.btn.btn-xs.btn-red.mright5.mbottom5
                  i.fa.fa-binoculars.mright5
                  |My Event 6
                .fc-event-btn.btn.btn-xs.btn-orange.mright5.mbottom5
                  i.fa.fa-calculator.mright5
                  |My Event 7
                .fc-event-btn.btn.btn-xs.btn-yellow.mright5.mbottom5
                  i.fa.fa-cc.mright5
                  |My Event 8
                .fc-event-btn.btn.btn-xs.btn-green.mright5.mbottom5
                  i.fa.fa-futbol-o.mright5
