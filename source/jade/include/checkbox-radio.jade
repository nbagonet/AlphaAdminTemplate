div.col-lg-12

  //Nav Tabs
  ul.nav.nav-tabs.nav-tabs-orange(role="tablist")
    li.active
      a(href="#icheck-demo" role="tab" data-toggle="tab")
        |iCheck&nbsp;
        span.badge.badge-warning v1.0.2

  //Tab Panes
