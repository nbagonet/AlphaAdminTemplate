    //iCheck
    div#icheck-demo.tab-pane.fade.in.active

      //Minimal skin
      div.skin.skin-minimal
        h3 Minimal skin
        div.row

          div.col-md-4
            div.demo-checkbox-radio
              h4 Checkbox
              ul.list-unstyled
                li
                  input#minimal-checkbox-1(type="checkbox")
                  label(for="minimal-checkbox-1") &nbsp;Checkbox 1
                li
                  input#minimal-checkbox-2(type="checkbox" checked)
                  label(for="minimal-checkbox-2") &nbsp;Checkbox 2
                li
                  input#minimal-checkbox-disabled(type="checkbox" disabled)
                  label(for="minimal-checkbox-disabled") &nbsp;Disabled
                li
                  input#minimal-checkbox-disabled-checked(type="checkbox" disabled checked)
                  label(for="minimal-checkbox-disabled-checked") &nbsp;Disabled &amp; Checked

          div.col-md-4
            div.demo-checkbox-radio
              h4 Radio
              ul.list-unstyled
                li
                  input#minimal-radio-1(type="radio" name="minimal-radio")
                  label(for="minimal-radio-1") &nbsp;Radio 1
                li
                  input#minimal-radio-2(type="radio" name="minimal-radio" checked)
                  label(for="minimal-radio-2") &nbsp;Radio 2
                li
                  input#minimal-radio-disabled(type="radio" disabled)
                  label(for="minimal-radio-disabled") &nbsp;Disabled
                li
                  input#minimal-radio-disabled-checked(type="radio" disabled checked)
                  label(for="minimal-radio-disabled-checked") &nbsp;Disabled &amp; Checked

          div.col-md-4
            div.demo-checkbox-radio.skin-section.skin-states
              h4 States
              ul.list-unstyled
                li
                  div.state.icheckbox_minimal
                  div.state.iradio_minimal
                  |&nbsp;Normal
                li
                  div.state.icheckbox_minimal.hover
                  div.state.iradio_minimal.hover
                  |&nbsp;Hover
                li
                  div.state.icheckbox_minimal.checked
                  div.state.iradio_minimal.checked
                  |&nbsp;Checked
                li
                  div.state.icheckbox_minimal.disabled
                  div.state.iradio_minimal.disabled
                  |&nbsp;Disabled
                li
                  div.state.icheckbox_minimal.checked.disabled
                  div.state.iradio_minimal.checked.disabled
                  |&nbsp;Checked &amp; Disabled

        div.row
          div.col-md-12
            div.colors.clearfix
              strong Color schemes
