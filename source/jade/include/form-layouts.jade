        div.panel-body
          form.mtop15(role="form")
            div.form-group
              +buttons("btn-success mright5","Sign in")
              +buttons("btn-grey","Cancel")
            div.form-group
              label(for="email04")
                |Email
                span.text-red *
              input#email04.form-control(type="email" placeholder="Email")
