//- Forms - Form Layouts


include ../common/variables
include ./mixins


div.col-lg-12

  div.row

    div.col-md-6
      //Form Actions On Bottom
      div.panel.panel-success
        div.panel-heading Form Actions On Bottom
        div.panel-body
          form.form-horizontal.mtop15(role="form")
            div.form-group
              label.col-md-3.control-label(for="email01")
                |Email
                span.text-red *
              div.col-md-9
                input#email01.form-control(type="email" placeholder="Email")
            div.form-group
              label.col-md-3.control-label(for="pass01")
                |Password
                span.text-red *
              div.col-md-9
                input#pass01.form-control(type="password" placeholder="Password")
            div.form-group
              div.col-md-offset-3.col-md-9
                +buttons("btn-danger mright5","Sign in")
                +buttons("btn-grey","Cancel")

    div.col-md-6
      //Form Actions On Top
      div.panel.panel-warning
        div.panel-heading Form Actions On Top
        div.panel-body
          form.form-horizontal.mtop15(role="form")
            div.form-group
              div.col-md-offset-3.col-md-9
                +buttons("btn-danger mright5","Sign in")
                +buttons("btn-grey","Cancel")
            div.form-group
              label.col-md-3.control-label(for="email02")
                |Email
                span.text-red *
              div.col-md-9
                input#email02.form-control(type="email" placeholder="Email")
            div.form-group
              label.col-md-3.control-label(for="pass02")
                |Password
                span.text-red *
              div.col-md-9
                input#pass02.form-control(type="password" placeholder="Password")

  div.row

    div.col-md-12
      //Form Actions On Top & Bottom
      div.panel.panel-danger
        div.panel-heading Form Actions On Top &amp; Bottom
