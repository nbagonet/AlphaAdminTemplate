  div.row

    div.col-md-12
      //Basic 2 Columns Form
      div.panel.panel-black
        div.panel-heading Basic 2 Columns Form
        div.panel-body
          form(role="form")
            h3 Form Name
            div.row
              div.col-md-6
                div.form-group
                  label(for="inputFirstName") First Name
                  input#inputFirstName.form-control(type="text" placeholder="First Name")
              div.col-md-6
                div.form-group
                  label(for="inputLastName") Last Name
                  input#inputLastName.form-control(type="text" placeholder="Last Name")
            div.row
              div.col-md-6
                div.form-group
                  label(for="inputEmail") Email Address
                  input#inputEmail.form-control(type="email" placeholder="Email Address")
              div.col-md-6
                div.form-group
                  label(for="selGender") Gender
                  select#selGender.form-control
                    option Male
                    option Female
            div.row
              div.col-md-6
                div.form-group
                  label(for="inputBirthday") Birthday
                  input#inputBirthday.form-control(type="date")
              div.col-md-6
                div.form-group
                  label(for="inputPhone") Phone
                  input#inputPhone.form-control(type="tel")
            div.form-group.text-right
              +buttons("btn-red mright5","Submit")
              +buttons("btn-grey","Cancel")

