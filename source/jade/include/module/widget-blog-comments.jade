//- UI Elements - Widgets - Blog Comments List

include ../../common/variables
include ../mixins

//Widget - Blog Comments List
div.widget.panel.panel-white
  div.panel-heading
    i.fa.fa-comments.mright10
    |Recent Comments
  div.panel-body
    ul.blog-widget-commetnslist.list-unstyled
      - for(var i=0;i<5;i++)
        li
          div.media
            a.media-left(href="#{page_pages_blog_item.url}")
              img(src="#{userhead[i]}" alt="Glenn Holland")
            div.media-body
              p Glenn Holland
              p
                a(href="#{page_pages_blog_item.url}")
                  small This is a comment.