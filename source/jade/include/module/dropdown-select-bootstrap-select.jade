              option Salsa
            |data-size="5"
      tr
        th.text-right Data Divider
        td
          select.selectpicker
            option Mustard
            option Ketchup
            option Relish
            option(data-divider="true")
            option Mayonnaise
            option Barbecue Sauce
            option Salad Dressing
      tr
        th.text-right Show Subtext
        td
          select.selectpicker(data-show-subtext="true")
            option(data-subtext="sub1") Mustard
            option(data-subtext="sub2") Ketchup
            option(data-subtext="sub3") Relish
      tr
        th.text-right Data Icons
        td
          select.selectpicker
            option(data-icon="glyphicon-glass") Mustard
            option(data-icon="fa fa-bus") Bus
            option(data-icon="ti-email") Email
            option(data-icon="icon-camera") Camera
      tr
        th.text-right HTML Content
        td
          select.selectpicker
            option(data-content="Relish <span class='label label-success'>Relish</span>") Relish
            option(data-content="<span class='label label-danger'>Mustard</span>") Mustard
      tr
        th.text-right Dropdown header
        td
          select.selectpicker(data-header="Select a condiment")
            option Mustard
            option Ketchup
            option Relish
