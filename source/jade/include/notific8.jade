//- UI Advanced - Notific8 & Sco.message


include ../common/variables
include ./mixins


div.col-lg-12

  div.panel.panel-white
    div.panel-body

      div.row
        div.col-md-10

          form.form-horizontal(role="form")
            div.form-group
              label.col-sm-4.control-label(for="notific8Text") Notification text
              div.col-sm-8
                input#notific8Text.form-control(type="text" name="notific8Text" size="50" maxlength="100" value="notific8 was inspired by Windows 8 notifications" placeholder="Please type notification text")
            div.form-group
              label.col-sm-4.control-label(for="notific8Sticky") Sticky
              div.col-sm-8
                div.checkbox
                  label(data-icheck="true")
                    input#notific8Sticky.icheck(type="checkbox" name="notific8Sticky")
                    |&nbsp;&nbsp;If checked, setting life below will be ignored.
            div.form-group
              label.col-sm-4.control-label(for="notific8Life") Life
              div.col-sm-8
                select.selectpicker#notific8Life(name="notific8Life")
                  option(value="1000") 1 second
                  option(value="5000") 5 second
                  option(value="10000" selected) 10 seconds (default)
                  option(value="25000") 25 second
                  option(value="60000") 60 second
            div.form-group
              label.col-sm-4.control-label(for="notific8Heading") Heading (optional)
