            div.form-group
              label.col-md-4.control-label(for="selectmultipleDisabled") Select Multiple
              div.col-md-8
                select#selectmultipleDisabled.form-control(name="selectmultipleDisabled" multiple disabled)
                  - for(var i=1;i<=10;i++)
                    option Option #{i}
            div.form-group
              label.col-md-4.control-label(for="prependedtextDisabled") Prepended Text
              div.col-md-8
                div.input-group
                  span.input-group-addon prepend
                  input#prependedtextDisabled.form-control(type="text" name="prependedtextDisabled" placeholder="placeholder" disabled)
                p.help-block 'help'
            div.form-group
              label.col-md-4.control-label(for="appendedtextDisabled") Appended Text
              div.col-md-8
                div.input-group
                  input#appendedtextDisabled.form-control(type="text" name="appendedtextDisabled" placeholder="placeholder" disabled)
                  span.input-group-addon append
                p.help-block 'help'
            div.form-group
              label.col-md-4.control-label(for="prependedcheckboxDisabled") Prepended Checkbox
              div.col-md-8
                div.input-group
                  span.input-group-addon
                    input(type="checkbox" disabled)
                  input#prependedcheckboxDisabled.form-control(type="text" name="prependedcheckboxDisabled" placeholder="placeholder" disabled)
                p.help-block 'help'
            div.form-group
              label.col-md-4.control-label(for="appendedcheckboxDisabled") Append Checkbox
              div.col-md-8
                div.input-group
                  input#appendedcheckboxDisabled.form-control(type="text" name="appendedcheckboxDisabled" placeholder="placeholder" disabled)
                  span.input-group-addon
                    input(type="checkbox" disabled)
                p.help-block 'help'
            div.form-group
              label.col-md-4.control-label(for="textareaDisabled") Textarea
              div.col-md-8
                textarea#textareaDisabled.form-control(name="textareaDisabled" rows="3" placeholder="placeholder" disabled)
            div.form-group
              label.col-md-4.control-label(for="") Double Button
              div.col-md-8
                +buttons("btn-success mright5","Button 1")(disabled)
                +buttons("btn-danger","Button 2")(disabled)

  div.row

    div.col-md-6
      //Validation states
      div.panel.panel-violet
        div.panel-heading Validation states
        div.panel-body
          form.form-horizontal(role="form")
            div.form-group.has-success.has-feedback
              label.col-md-4.control-label(for="inputSuccess1") Input with success
              div.col-md-8
                input#inputSuccess1.form-control(type="text" value="Success")
                span.glyphicon.glyphicon-ok.form-control-feedback
            div.form-group.has-warning.has-feedback
              label.col-md-4.control-label(for="inputWarning1") Input with warning
              div.col-md-8
                input#inputWarning1.form-control(type="text" value="Warning")
                span.glyphicon.glyphicon-warning-sign.form-control-feedback
            div.form-group.has-error.has-feedback
              label.col-md-4.control-label(for="inputError1") Input with error
              div.col-md-8
                input#inputError1.form-control(type="text" value="Error")
                span.glyphicon.glyphicon-remove.form-control-feedback

    div.col-md-6
      //Validation states disabled
      div.panel.panel-grey
        div.panel-heading Validation states disabled
        div.panel-body
          form.form-horizontal(role="form")
            div.form-group.has-success.has-feedback
              label.col-md-4.control-label(for="inputSuccess2") Input with success
              div.col-md-8
                input#inputSuccess2.form-control(type="text" value="Success" disabled)
                span.glyphicon.glyphicon-ok.form-control-feedback
            div.form-group.has-warning.has-feedback
              label.col-md-4.control-label(for="inputWarning2") Input with warning
              div.col-md-8
                input#inputWarning2.form-control(type="text" value="Warning" disabled)
                span.glyphicon.glyphicon-warning-sign.form-control-feedback
            div.form-group.has-error.has-feedback
              label.col-md-4.control-label(for="inputError2") Input with error
              div.col-md-8
                input#inputError2.form-control(type="text" value="Error" disabled)
                span.glyphicon.glyphicon-remove.form-control-feedback