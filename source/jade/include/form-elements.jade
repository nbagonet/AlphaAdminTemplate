            div.form-group
              label.col-md-4.control-label(for="radiosDisabled") Inline Radios
              div.col-md-8
                - for(var i=0;i<4;i++)
                  label.radio-inline(for="radiosDisabled-inline-#{i}")
                      input(id="radiosDisabled-inline-#{i}" type="radio" name="radiosDisabled" value="#{i}" disabled)
                      span.mleft5 #{i}
            div.form-group
              label.col-md-4.control-label(for="checkboxesDisabled") Inline Checkboxes
              div.col-md-8
                - for(var i=0;i<4;i++)
                  label.checkbox-inline(for="checkboxesDisabled-inline-#{i}")
                    input(id="checkboxesDisabled-inline-#{i}" type="checkbox" name="checkboxesDisabled" value="#{i}" disabled)
                    span.mleft5 #{i}
            div.form-group
              label.col-md-4.control-label(for="filebuttonDisabled") File Button
              div.col-md-8
                input#filebuttonDisabled(name="filebuttonDisabled" type="file" disabled)
            div.form-group
              label.col-md-4.control-label(for="selectbasicDisabled") Select Basic
              div.col-md-8
                select#selectbasicDisabled.form-control(name="selectbasicDisabled" disabled)
                  option Option 1
